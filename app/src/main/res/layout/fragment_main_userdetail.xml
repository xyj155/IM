<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_userinfor"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/ic_user_detai"
                        android:drawablePadding="15sp"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="个人信息"
                        android:textColor="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:background="#fafafa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_user_location"
                        android:drawableLeft="@mipmap/ic_user_message"
                        android:drawablePadding="15sp"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="浙江.嘉兴"
                        android:textColor="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:background="#fafafa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_post"
                        android:drawableLeft="@mipmap/ic_user_usage"
                        android:drawablePadding="15sp"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="我的投稿"
                        android:textColor="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:background="#fafafa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/ic_user_tag"
                        android:drawablePadding="15sp"
                        android:id="@+id/tv_tag"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="我的标签"
                        android:textColor="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:background="#fafafa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/ic_user_notification"
                        android:drawablePadding="15sp"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:id="@+id/tv_notification"
                        android:text="提醒"
                        android:textColor="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:background="#fafafa" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/ic_user_setting"
                        android:drawablePadding="15sp"
                        android:id="@+id/tv_setting"
                        android:drawableRight="@mipmap/ic_go"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="设置"
                        android:textColor="#000" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:background="@drawable/btn_user_white_bg"
                android:text="点击修改资料信息" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pull" />
        </LinearLayout>

        <com.example.administrator.im.view.CircleImageView
            android:layout_width="90dp"
            android:id="@+id/img_user_head"
            android:layout_height="90dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="15sp"
            android:src="@mipmap/ic_im"
            app:civ_border_color="#fafafa"
            app:civ_border_width="1dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_bookmark_24dp" />
    </FrameLayout>

</RelativeLayout>